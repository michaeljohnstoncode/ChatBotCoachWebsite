
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <header class="header text-center my-4">
        <h1>Welcome to GamingCoach!</h1>
        <p class="lead">Some attention grabbing statement</p>
    </header>

    <section id="games">
        <h2 class="text-center my-4">Our Supported Games:</h2>
        <div class="row">
            @for (int i = 0; i < 6; i++)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="path/to/image" alt="Game Image">
                        <div class="card-body">
                            <h5 class="card-title">Game Name</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section id="try-out" class="my-4">
        <h2 class="text-center">Try It Out!</h2>
        <p class="text-center">
            Some information here...
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Sign Up</a> <!-- or link to chat page if signed in -->
        </p>
        <div id="real-examples" class="mt-4">
            <h3 class="text-center">Real Examples</h3>
            <!-- Text and images showcasing the chat bot -->
        </div>
    </section>
</div>