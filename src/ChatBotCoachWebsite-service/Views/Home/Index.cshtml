
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <title>GamingCoach AI</title>
</head>
<body>
    <div id="particles-js"></div>

    <div class="container">
        <header>
            <h1>Welcome to GamingCoach AI!</h1>
            <p>Transforming the way you game with the power of artificial intelligence.</p>
        </header>

        <section id="games">
            <h2>Our Supported Games</h2>
            <div class="game-grid">
                <div class="game-card">
                    <img src="~/images/ow2wallpaper.png" alt="Overwatch 2 Image">
                    <h5>Overwatch 2</h5>
                </div>
                <div class="game-card">
                    <img src="~/images/valorantwallpaper.png" alt="Valorant Image">
                    <h5>Valorant</h5>
                </div>
            </div>
        </section>

        <section id="try-out">
            <h2>Experience the Future</h2>
            <p>
                Join the AI revolution and elevate your gaming strategies.
                <!-- Register modal -->
                <button type="button" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#registerModal"
                        data-url="/Identity/Account/Register" data-title="Register" data-force-reload="true">
                    Sign Up
                </button>
            </p>
            <div id="real-examples">
                <h3>See It In Action</h3>
                <!-- Add chatbot mockup graphics or interactive demo if possible -->
            </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/particles.js"></script>


</body>
</html>
