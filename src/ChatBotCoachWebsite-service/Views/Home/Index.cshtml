
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>GamingCoach AI</title>
</head>
<body>
    <div class="container">
        <header>
            <h1>Welcome to GamingCoach AI!</h1>
            <p>Transforming the way you game with the power of artificial intelligence.</p>
        </header>

        <section id="games">
            <h2>Our Supported Games</h2>
            <div class="game-grid">
                @for (int i = 0; i < 6; i++)
                {
                    <div class="game-card">
                        <img src="path/to/image" alt="Game Image">
                        <h5>Game Name</h5>
                    </div>
                }
            </div>
        </section>

        <section id="try-out">
            <h2>Experience the Future</h2>
            <p>
                Join the AI revolution and elevate your gaming strategies.
                <a href="@Url.Action("Login", "Account")" class="btn">Sign Up</a>
            </p>
            <div id="real-examples">
                <h3>See It In Action</h3>
                <!-- Add chatbot mockup graphics or interactive demo if possible -->
            </div>
        </section>
    </div>
</body>
</html>
