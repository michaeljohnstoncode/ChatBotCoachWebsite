
@{
    ViewData["Title"] = "Home";
}

<style>
    #see-in-action {
        margin: 40px 0;
        padding: 20px;
        background-color: #303030;
        color: white;
    }

    .chat-container {
        max-width: 80%;
        margin: 0 auto;
    }

    /* Style the chat history box */
    #messagesList {
        overflow-y: auto;
        max-height: 75vh;
        padding: 10px;
        max-width: 80%;
        margin: 0 auto;
        list-style: none;
    }

        #messagesList::-webkit-scrollbar {
            width: 8px;
        }

        #messagesList::-webkit-scrollbar-thumb {
            background-color: #bfbdbd;
            border-radius: 10px;
        }

        #messagesList::-webkit-scrollbar-track {
            background-color: #696969;
        }


    /* Style individual chat messages */
    .user-message,
    .assistant-message {
        display: inline-block;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 10px;
    }

    .user-message {
        background-color: #2196F3;
    }

    .assistant-message {
        background-color: #1565c0;
    }


    /* Style the bottom bar containing chat input and send button */
    #bottom-bar {
        position: fixed;
        bottom: 0;
        width: 60%;
        background-color: #212121;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        left: 50%;
        transform: translateX(-50%);
    }

    /* Style the bottom bar overlay when the user is not logged in */
    #bottom-bar-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 2;
    }

    #bottom-bar-overlay-text {
        color: white;
        font-size: 18px;
        text-align: center;
        padding: 20px;
    }


    /* Style the chat input box */
    #messageInput {
        flex: 1;
        height: 100px;
        resize: none;
        padding: 8px;
        border: 2px solid #696969;
        border-radius: 8px;
        background-color: #1c1c1c;
        padding-right: 100px;
        color: white;
        font-size: 20px;
        white-space: normal;
        text-align: start;
        overflow-wrap: break-word;
        overflow-y: auto;
    }

        /* WebKit Scrollbar styles for the text input box */
        #messageInput::-webkit-scrollbar {
            width: 8px;
        }

        #messageInput::-webkit-scrollbar-thumb {
            background-color: #bfbdbd;
            border-radius: 10px;
        }

        #messageInput::-webkit-scrollbar-track {
            background-color: #696969;
        }

    /* Style the send button */
    #sendButton {
        background-color: #4CAF50;
        color: white;
        border: none;
        position: absolute;
        right: 25px;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

</style>


<!DOCTYPE html>
<html lang="en">
   
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <title>GamingCoach AI</title>
</head>
<body>
    <div id="particles-js"></div>

    <div class="container">
        <header>
            <h1>Welcome to GamingCoach AI!</h1>
            <p>Transforming the way you game with the power of artificial intelligence.</p>
        </header>

        <section id="games">
            <h2>Our Supported Games</h2>
            <div class="game-grid">
                <div class="game-card">
                    <img src="~/images/ow2wallpaper.png" alt="Overwatch 2 Image">
                    <h5>Overwatch 2</h5>
                </div>
                <div class="game-card">
                    <img src="~/images/valorantwallpaper.png" alt="Valorant Image">
                    <h5>Valorant</h5>
                </div>
            </div>
        </section>

        <section id="try-out">
            <h2>Experience the Future</h2>
            <p>
                Join the AI revolution and elevate your gaming strategies.
                <!-- Register modal -->
                <button type="button" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#registerModal"
                        data-url="/Identity/Account/Register" data-title="Register" data-force-reload="true">
                    Sign Up
                </button>
            </p>
            <div id="real-examples">

                <div id="see-in-action">
                    <h2>See it in Action</h2>
                    <div class="chat-container">
                        <!-- Messages -->
                        <div id="messagesList">
                            <li class="user-message">John: Hello ChatBot!</li>
                            <li class="assistant-message">Assistant: Hi John! How can I assist you today?</li>
                            <li class="user-message">John: What can you do?</li>
                            <li class="assistant-message">Assistant: I can answer questions, provide information, and more. How may I serve you today?</li>
                            <!-- Add more preset messages here -->
                        </div>

                        <!-- Bottom bar -->
                        <div id="bottom-bar">
                            <!-- User Input (Hidden for the demo) -->
                            <div data-user-name="John" id="userInput"></div>

                            <!-- Chat input box (Made readonly for the demo) -->
                            <textarea id="messageInput" placeholder="Type a message..." readonly></textarea>

                            <!-- Send button (disabled for the demo) -->
                            <input type="button" id="sendButton" value="Send" disabled />
                        </div>
                    </div>
                </div>


                </div>
            </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/particles.js"></script>


</body>
</html>
