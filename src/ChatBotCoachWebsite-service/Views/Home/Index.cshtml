
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
    <style>
    #see-in-action {
        margin: 20px 0;
        padding: 20px;
        background-color: #303030;
        color: white;
    }

    .mini-chat {
        width: 80%;
        margin: 0 auto;
    }

    #messagesList {
        max-height: 300px; /* Adjust based on your preference */
        overflow-y: scroll;
    }

    .bottom-bar {
        position: relative;
        background-color: #212121;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
    }

    #sendButton[disabled] {
        background-color: #aaa; /* Gives a visual indication the button is disabled */
        cursor: not-allowed;
    }

    </style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <title>GamingCoach AI</title>
</head>
<body>
    <div id="particles-js"></div>

    <div class="container">
        <header>
            <h1>Welcome to GamingCoach AI!</h1>
            <p>Transforming the way you game with the power of artificial intelligence.</p>
        </header>

        <section id="games">
            <h2>Our Supported Games</h2>
            <div class="game-grid">
                <div class="game-card">
                    <img src="~/images/ow2wallpaper.png" alt="Overwatch 2 Image">
                    <h5>Overwatch 2</h5>
                </div>
                <div class="game-card">
                    <img src="~/images/valorantwallpaper.png" alt="Valorant Image">
                    <h5>Valorant</h5>
                </div>
            </div>
        </section>

        <section id="try-out">
            <h2>Experience the Future</h2>
            <p>
                Join the AI revolution and elevate your gaming strategies.
                <!-- Register modal -->
                <button type="button" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#registerModal"
                        data-url="/Identity/Account/Register" data-title="Register" data-force-reload="true">
                    Sign Up
                </button>
            </p>
            <div id="real-examples">

                <div id="see-in-action">
                    <h2>See it in Action</h2>
                    <div class="mini-chat">
                        <!-- Messages -->
                        <div id="messagesList">
                            <li class="user-message">John: Hello ChatBot!</li>
                            <li class="assistant-message">Assistant: Hi John! How can I assist you today?</li>
                            <li class="user-message">John: What can you do?</li>
                            <li class="assistant-message">Assistant: I can answer questions, provide information, and more. How may I serve you today?</li>
                            <!-- Add more preset messages here -->
                        </div>

                        <!-- Bottom bar -->
                        <div id="bottom-bar-demo" class="bottom-bar">
                            <!-- User Input -->
                            <div data-user-name="John" id="userInput"></div>

                            <!-- Chat input box -->
                            <textarea id="messageInput" placeholder="Type a message..." readonly></textarea>

                            <!-- Send button (disabled for the demo) -->
                            <input type="button" id="sendButton" value="Send" disabled />
                        </div>
                    </div>
                </div>

                </div>
            </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/particles.js"></script>


</body>
</html>
